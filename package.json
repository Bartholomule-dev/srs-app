{
  "name": "srs-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "db:start": "npx supabase start",
    "db:stop": "npx supabase stop",
    "db:reset": "npx supabase db reset",
    "db:types": "npx supabase gen types typescript --local > src/lib/types/database.generated.ts",
    "db:import-exercises": "npx tsx scripts/import-exercises.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "validate:exercises": "npx tsx scripts/validate-exercises.ts",
    "validate:curriculum": "npx tsx scripts/validate-curriculum.ts",
    "validate:dynamic": "npx tsx scripts/validate-dynamic-exercises.ts",
    "validate:all": "pnpm validate:exercises && pnpm validate:curriculum && pnpm validate:dynamic",
    "generate:exercise-list": "npx tsx scripts/generate-exercise-list.ts",
    "generate:exercise-list:obsidian": "npx tsx scripts/generate-exercise-list.ts --obsidian \"/home/brett/GoogleDrive/Obsidian Vault\""
  },
  "dependencies": {
    "@fontsource-variable/dm-sans": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource-variable/space-grotesk": "^5.2.10",
    "@phosphor-icons/react": "^2.1.10",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "js-yaml": "^4.1.1",
    "mustache": "^4.2.0",
    "next": "16.1.1",
    "pyodide": "^0.29.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "seedrandom": "^3.0.5",
    "tailwind-merge": "^3.4.0",
    "ts-fsrs": "^5.2.3",
    "yaml": "^2.8.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "supabase"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/seedrandom": "^3.0.8",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.17.1",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "fast-check": "^4.5.3",
    "jsdom": "^27.4.0",
    "supabase": "^2.70.5",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
